<div class="container">
  <h1>Create a new dose!</h1>
  <div class="form-container text-center">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "Add dose", class: "btn btn-navbar" %>
    <% end %>
  </div>
</div>

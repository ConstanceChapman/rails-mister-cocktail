<div class="banner new_cocktail_banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.5)), url(<%= image_path "new_cocktail.jpg" %>);"></div>

<div class="form-container">
  <div class="pink-box">
    <h1>Create a new cocktail!</h1>
    <div class="form-container text-center">
      <%= simple_form_for [@cocktail] do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Add cocktail", class: "btn btn-navbar" %>
      <% end %>
    </div>
  </div>
</div>

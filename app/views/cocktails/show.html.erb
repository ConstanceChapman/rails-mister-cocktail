<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.5)), url(<%= @cocktail.photo %>);">
  <h3>
    <span id="ingredients-typed-text" data-ingredients="<%= @cocktail.doses.map { |d| d.ingredient.name}.join('|') %>"></span>
  </h3>
</div>

<div class="container cocktail-container">
  <div class="cocktail-box" id="name">
    <h1><%= @cocktail.name %></h1>
  </div>

  <div class="cocktail-box" id="doses">
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li>
        <div><strong><%= dose.ingredient.name %></strong> <%= dose.description %></div>
        <%= link_to dose_path(dose), method: :delete do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
      </li>
      <% end %>
    </ul>
    <div class="form-container text-center">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit "Add some flavour", class: "btn btn-navbar", id: "new-dose" %>
      <% end %>
    </div>
  </div>
</div>
